extends layout

block content
    div(class="container-form")
        h2(class="title") Running Key
        form(id="form" method="post" action="/encrypt-running")
            div(class="form-group")
                input(type="text" id="runningText" autocomplete="off" name="encrypt")
                label(for="runningText" class="control-label") Plain Text
                i(class="bar")
            div(class="form-group")
                input(type="text" id="key" autocomplete="off" name="key" )
                label(for="key" class="control-label") Key
                i(class="bar")
            div(class="button-container")
                input(class="button" id="encBtn" value="v Encrypt v" type="submit")
                input(class="button" value="^ Decrypt ^" type="submit" formaction="/decrypt-running")
            div(class="form-group")
                input(type="text" id="bottom-cipher" name="decrypt" )
                label(for="bottom-cipher" class="control-label") Cipher Text
                i(class="bar")